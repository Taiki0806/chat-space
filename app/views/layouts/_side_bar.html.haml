.sidebar
  .sidebar__user-menu
    %p.sidebar__user-menu__user-name
      = current_user.name
    %a.sidebar__user-menu__list
      = link_to edit_user_path(current_user) do
        = fa_icon "cog", class: 'sidebar__user-menu__edit-link'
    %a.sidebar__user-menu__list
      = link_to new_group_path do
        = fa_icon "pencil-square-o", class: 'sidebar__user-menu__new-link'
  .sidebar__group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .sidebar__group-list__title
          = group.name
        .sidebar__group-list__comment
          = group.show_last_message
